    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start run",
            "name": "Frontend",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "name": "Django",
            "type": "python",
            "request": "launch",
            "program": "./manage.py",
            "args": [
                "runserver",
                "127.0.0.1:8000",
                "--insecure",
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Django (DB reset)",
            "type": "python",
            "request": "launch",
            "preLaunchTask": "db-reset",
            "program": "./manage.py",
            "args": [
                "runserver",
                "127.0.0.1:8000",
                "--insecure",
            ],
            "django": true,
            "justMyCode": true
        }
    ]
}
